<%- include("templates/header") %>
<h1>Hello, <%= username %>.</h1>
<br>
<h1>You are logged in as <%= username %>!</h1>
<br>
<% if (list != "none") { %>
<div style="overflow-x: auto;">
    <table border="1">
        <tr>
            <th>#</th>
            <th>Description</th>
        </tr>
        <tr>
            <% let i=0; %>
            <% for(i=0; i < list.length; i++) { %>
            <%- include('templates/todolist', {num: i+1, item: list[i]})  %>
            <% } %>
        </tr>

    </table> <% } %>
</div>
<br>
<form action='/addToDo' method='post'>
    <input name='todo' type='text' placeholder='What needs to be done?' size="30">
    <button>Add</button>
</form>
<br>
<form action='/logout' method='post'>
    <button>Log out</button>
</form>
<% if (missing == "todo") { %>
<br> Cannot add with an empty field. (required)
<% } %>

<%- include("templates/footer") %>